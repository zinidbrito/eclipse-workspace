package segundaInterativa;
import java.util.*;

public class ClassePrincipal {

	public static void main(String[] args) {
		/*Criar um programa que
		 * Receber nomes, cidades e situações de pesosoas
		 * Esse programa nao deve permitir nomes vazios, idades negativas e situações diferentes de A I ou E
		 * Ao final do programa exibir : 
		 * a) todos os dados das pessoas
		 * b) a maior idade informada
		 * c)  o numero ou a quatidade de pessoas me cada uma das situações
		 * */

		String[] nomes = new String[50];
		int[] idade = new int[50];
		char[] situacoes = new char[50];
		char continuar = 'S';
		int nPessoas = 0;
		
		Scanner entCar = new Scanner(System.in);
		Scanner entNum = new Scanner(System.in);
		
		while (continuar == 'S' || continuar == 's') {
			System.out.printf("Digite o nome da %dº pessoa: \n",nPessoas+1);
				nomes[nPessoas] = entCar.nextLine();
				
		while (nomes[nPessoas].equals("")){
			System.out.printf("Nome Inválido. Digite o nome da %dº pessoa:\n", nPessoas+1);
				nomes[nPessoas] = entCar.nextLine();
		}
		
		while (idade[nPessoas] <0) {
		System.out.printf("Digite a idade da %dº pessoa: \\n",nPessoas+1);
		idade[nPessoas] = entNum.nextInt();
	}
		System.out.printf("Digite a situação da %d pessoa (A, I ou E)");
		
		nPessoas++;
			
			
		
		}
	}
}

